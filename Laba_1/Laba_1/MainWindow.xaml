        mc:Ignorable="d"
        Title="Лабораторна Робота №1 - Головне меню" Height="510" Width="474" ResizeMode="CanMinimize" Icon="Resources/favicon.ico" WindowStartupLocation="CenterScreen">
    <Grid>
